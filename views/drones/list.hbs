<h2>Available drones</h2>

{{#each drones}}
<section class="drone-details">
    <h2>Name: {{this.name}}</h2>
    <p>
        Propellers: {{this.propellers}} <br />
        MaxSpeed: {{this.maxSpeed}}
    </p>
    <a href="/drones/{{_id}}/edit">Edit</a>

    <form action="/drones/{{_id}}/delete" method="post">
        <button type="submit">Delete</button>
    </form>

</section>

{{/each}}

<form action="/drones/create" method="get" >
    <button type="submit" id="create-btn">Create Drone</button>
</form>